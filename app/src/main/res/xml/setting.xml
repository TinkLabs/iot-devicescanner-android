<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
            app:key="scan_category"
            app:title="Scan Settings">

        <SwitchPreferenceCompat
                app:key="@string/sp_key_enable_sound"
                app:title="Enable sound"
                app:summary="Enable or disable the sound when scan trigger"
                app:defaultValue="@bool/sp_default_enable_sound"/>

        <SwitchPreferenceCompat
                app:key="@string/sp_key_enable_UPCA"
                app:title="Enable symbology: UPCA"
                app:defaultValue="@bool/sp_default_enable_UPCA"/>

        <SwitchPreferenceCompat
                app:key="@string/sp_key_enable_CODE39"
                app:title="Enable symbology: CODE39"
                app:defaultValue="@bool/sp_default_enable_CODE39"/>

        <SwitchPreferenceCompat
                app:key="@string/sp_key_enable_CODE128"
                app:title="Enable symbology: CODE128"
                app:defaultValue="@bool/sp_default_enable_CODE128"/>

        <SwitchPreferenceCompat
                app:key="@string/sp_key_enable_QR"
                app:title="Enable symbology: QR"
                app:defaultValue="@bool/sp_default_enable_QR"/>

        <SwitchPreferenceCompat
                app:key="@string/sp_key_enable_EAN13"
                app:title="Enable symbology: EAN13"
                app:defaultValue="@bool/sp_default_enable_EAN13"/>

    </PreferenceCategory>


    <PreferenceCategory
            app:key="help_category"
            app:title="Help">
        <Preference
                app:key="@string/sp_key_feedback"
                app:title="Send feedback"
                app:summary="Report technical issues or suggest new features"/>

        <Preference
                app:key="@string/sp_key_about"
                app:title="About"
                app:summary=""/>

        <Preference
                app:key="@string/sp_key_logout"
                app:title="Logout"
                app:summary=""/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>